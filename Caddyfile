(static) {
	file_server
	templates
}

:2015 {
	# Redirects to external sites
	redir /discord https://discordapp.com/users/143888967253622784
	redir /twitter https://twitter.com/hi_im_mobi
	redir /vrchat https://vrchat.com/home/user/usr_9da6843d-5203-474b-be08-d723ade92e19

	# Redirects for Git projects
	route /git* {
		uri strip_prefix /git
		redir https://github.com/mobiusk{uri}
	}

	# Redirects for Google Photo albums
	route /redirect/photos/* {
		uri strip_prefix /redirect/photos/
		redir https://photos.app.goo.gl/{uri}
	}

	# Redirects for moved pages
	redir /code/research* /projects/code-research
	redir /code/vrsvp* /projects/vrsvp
	redir /vrchat/gallery* /projects/vrchat/gallery

	# File serving
	root * ./src/main/webapp
	try_files {path} {path}.html {path}/index.html
	import static

	# Invalid requests
	handle_errors {
		rewrite * /404.html
		import static
	}
}
